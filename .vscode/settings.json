{

  // ********** General settings **********
  // Hide attic from Explorer and editor features
  "files.exclude": {
    "attic/**": true
  },
  // Exclude attic from global search (Ctrl+Shift+F) and Quick Open
  "search.exclude": {
    "attic/**": true
  },


  // ********** settings git / gitlens **********

  // disable "blame hover", to remove visual noise
 "gitlens.currentLine.enabled": false,


 // ********** settings for R *************

  // format on save so we dont have to manually format, use AIR for formatting
  "[r]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Posit.air-vscode",
    // disable hover for R, to remove visual noise
    "editor.hover.enabled": false
  },
  // disable diagnostics for R, because of the dreaded normalizePath error
  //"r.lsp.diagnostics": false,


  // ********** settings for C / C++ **********

  "[c]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "c-cpp-flylint.cppcheck.enable": true,
  "c-cpp-flylint.cppcheck.language": "c",          // <- forces C
  "c-cpp-flylint.cppcheck.arguments": [
    "--std=c11",
    "-i", "${workspaceFolder}/attic",
    "-I", "/usr/local/lib/R/include",
    "-I", "/usr/lib/R/include",
    "-I", "/opt/R/include",
    "-I", "/usr/share/R/include"
  ],

  "c-cpp-flylint.clang.enable": true,
  "c-cpp-flylint.clang.language": "c",
  "c-cpp-flylint.clang.arguments": [
    "-std=c11",
    "-I", "/usr/local/lib/R/include",
    "-I", "/usr/lib/R/include",
    "-I", "/opt/R/include",
    "-I", "/usr/share/R/include"
  ],

  "c-cpp-flylint.flawfinder.enable": true,
  "c-cpp-flylint.lizard.enable": false,
  "c-cpp-flylint.flexelint.enable": false,
}

